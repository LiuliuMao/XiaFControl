<Application x:Class="XiaFControlDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XiaFControlDemo"
             xmlns:xiaFControl="clr-namespace:XiaFControl;assembly=XiaFControl"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/XiaFControl;component/Themes/Basic/Generic.xaml" />
                <xiaFControl:BundledTheme BaseTheme="Light"
                                     PrimaryColor="XiaFPurple"/>
                <ResourceDictionary Source="pack://application:,,,/XiaFControlDemo;component/resources/xamls/language_en.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
